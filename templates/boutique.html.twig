{# templates/contact.html.twig #}
{% extends "base.html.twig" %}

{% block main %}

    {% block navbar %}
        {% include"navbar.html.twig" %}
    {% endblock %}
    <div class="main-div">
        <!-- debut du block content !-->
        <div class="card col-md-12">
            <div class="card-header">
                <h1><i class="fas fa-store"></i> {% trans %}Boutique{% endtrans %}
                    / {{ categories | length }}  {% trans %}rayon(s){% endtrans %}</h1>
            </div>
            <div class="card-body row">
                {% for categorie in categories %}
                    <div class="col-md-4">
                        <div class="card clickable"
                             onclick="location = '{{ path('rayon', { 'idCategorie': categorie.id }) }}'">
                            <img src="{{ asset(categorie.visuel) }}" class="card-img-top" alt="Fruits">
                            <div class="card-body">
                                <h4 class="card-title">{% trans %}Rayon{% endtrans %} {{ categorie.libelle }}</h4>
                                <p class="card-text"><i>{{ categorie.texte }}</i></p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <!-- fin du block content !-->
    </div>

{% endblock %}



