{# templates/contact.html.twig #}
{% extends "base.html.twig" %}

{% block body %}
    {% block navbar %}
        {% include"navbar.html.twig" %}
    {% endblock %}
    {% block div %}
        <main role="main" class="container">
            <div class="main-div">
                <!-- debut du block content !-->
                <div class="row">
                    <div class="alert alert-dark col-md-12">
                        <h1><i class="fas fa-store"></i>  {% trans %}Boutique{% endtrans %} / {{ categories | length }}  {% trans %}rayon(s){% endtrans %}</h1>
                    </div>
                </div>
                <div class="row">
                    {% for categorie in categories %}
                    <div class="col-md-4">
                        <div class="card clickable" onclick="location = '{{ path('rayon', { 'idCategorie': categorie.id }) }}'">
                            <img src="{{ asset(categorie.visuel) }}" class="card-img-top" alt="Fruits">
                            <div class="card-body">
                                <h4 class="card-title">{% trans %}Rayon{% endtrans %} {{ categorie.libelle }}</h4>
                                <p class="card-text"><i>{{ categorie.texte }}</i></p>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
                <!-- fin du block content !-->
            </div>
        </main>
    {% endblock %}
{% endblock %}